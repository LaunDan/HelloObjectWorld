package turnCombat;
import java.util.Random;


/** Class presents dice (cube for game) */
public class Cube {
    /** Generator of random numbers. */
    private Random random;
    /** Numbers of walls */
    private int amountWalls;
    
    /**
     *
     */
    public Cube(){
        amountWalls = 6;
        random = new Random();
    }
    
    /**
     *
     * @param amountWalls
     */
    public Cube(int amountWalls){
        this.amountWalls = amountWalls;
        random = new Random();
    }
    
     /**
     * Return amount of walls of dice
     * @return Amount of walls of dice.
     */
    public int returnAmountWalls() {
        return amountWalls;
    }
    
    public int throwed() {
        return random.nextInt(amountWalls) + 1;
    }
    
    @Override
    public String toString() {
        return String.format("Cube with %s walls", amountWalls);
    }
}
