package calculator;

/**
 *
 * @author Laun
 */

public class OperationChoose {
    public String calculate(int choose, float a, float b){
        if (choose < 0 || choose > 6)
            return "Wrong choose";
        float result = 0;
        switch (choose){
             case 1:
                 result = a + b;
                 break;
             case 2:
                 result = a - b;
                 break;
             case 3:
                 result = a * b;
                 break;
             case 4:
                 result = a / b;
                 break;
             case 5:
                 result = a;
                 for (int i = 0; i < (b - 1); i++){
                     result = result * a;
                 }
                 break;
             case 6:
                 result = (float) Math.pow(a, (1.0 / b));
                 break;
        }
        return String.format("result is %f", result);
    }
}
